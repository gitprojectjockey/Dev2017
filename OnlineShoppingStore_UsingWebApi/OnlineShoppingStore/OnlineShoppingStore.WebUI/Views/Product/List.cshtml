@model OnlineShoppingStore.WebUI.Models.ProductsViewModel

@{
    ViewBag.Title = "Products";
}

<h2>Products</h2>

@foreach (var p in Model.Products)
{
   @Html.Partial("ProductSummary",p)
}

<div class="btn-group pull-right">
    @Html.PageLinksExtention(Model.PagingInfo, x => Url.Action("List", new { page = x, category = Model.CurrentCategory}))
</div>


