@model IEnumerable<string>


@Html.ActionLink("View All", "List", "Product", new { page = "1" }, new { @class = "btn btn-block btn-default btn-lg" + (ViewBag.SelectedCategory == null ? " btn-primary btn-lg" : "")})


@foreach (var link in Model)
{
    @Html.RouteLink(link,
        new {controller = "Product", action = "List", category=link, page=1},
        new { @class = "btn btn-block btn-default btn-lg" + (link == ViewBag.SelectedCategory  ? " btn-primary btn-lg" : "") });
}