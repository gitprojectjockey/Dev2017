
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Ajax Demo</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/scripts/jquery-3.1.1.min.js"></script>
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <script src="~/scripts/bootstrap.min.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" />
   
    @Styles.Render("~/content/css")
</head>
<body>
    <div class="navbar navbar-inverse" role="navigation">
        <a class="navbar-brand" href="#">
            <span class="hidden-xs">Mvc Ajax Demoo</span>
            <span class="visible-xs nav-font-size-mobile">Mvc</span>
            <span class="visible-xs nav-font-size-mobile">Ajax</span>
            <span class="visible-xs nav-font-size-mobile">Demo</span>
        </a>
    </div>


    <div class="row panel-body">
        <div id="productDisplay" class="col-lg-12">
            <h2>This is my Ajax Demo</h2>
            @RenderBody()
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.min.js")
    @RenderSection("scripts", required: false);
</body>
</html>
